{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true,
    "stripInternal": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "lib": [
      "es2017",
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
